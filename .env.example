# MongoDB connection settings
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=study-util

# Document embeddings collection (for AI explanation generation)
# Collection containing document chunks with embeddings for searching relevant content
EMBEDDINGS_COLLECTION=embeddings

# OpenAI API (for embeddings and AI explanation generation)
OPENAI_API_KEY=
QUESTIONS_EMBEDDING_MODEL=text-embedding-3-small
# QUESTIONS_EMBEDDING_DIMENSIONS=1536

# OpenRouter API (for AI explanation generation)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Feature flags
# Enable development tools and endpoints even when NODE_ENV is not "development".
# Set to 1/true/yes/on to enable.
# Server-side toggle (affects API routes and middleware gating)
ENABLE_DEV_FEATURES=
# Client/UI toggle (read at build time for client-rendered pages)
NEXT_PUBLIC_ENABLE_DEV_FEATURES=
