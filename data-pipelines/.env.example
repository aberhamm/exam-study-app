# =============================================================================
# Data Pipelines - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# MONGODB DATABASE (Required)
# =============================================================================
# MongoDB connection string - should match your main app configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=study-util

# Collection names (should match your main app configuration)
MONGODB_EXAMS_COLLECTION=exams
MONGODB_QUESTIONS_COLLECTION=questions
MONGODB_QUESTION_EMBEDDINGS_COLLECTION=question_embeddings

# =============================================================================
# AI SERVICES (Required for pipelines)
# =============================================================================
# OpenRouter API key for AI question generation and processing
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# OpenAI API key for embeddings
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# PIPELINE CONFIGURATION (Optional)
# =============================================================================
# Timeout and retry settings
API_TIMEOUT_MS=30000
MAX_RETRIES=3

# Processing limits
MAX_CANDIDATES=100
CANDIDATE_MULTIPLIER=10

# Debug flags
DEBUG_RETRIEVAL=false
